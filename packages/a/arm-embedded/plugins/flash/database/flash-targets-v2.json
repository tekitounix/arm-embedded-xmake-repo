  "mcu_overrides": {
    "stm32h533re": {
      "pyocd_target": "stm32h533retx",
      "note": "PyOCD requires 'tx' suffix for this device"
    },
    "stm32h533retx": {
      "pyocd_target": "stm32h533retx"
    },
    "stm32f407vg": {
      "pyocd_target": "stm32f407vgtx"
    },
    "stm32f407vgtx": {
      "pyocd_target": "stm32f407vgtx"
    },
    "stm32f401re": {
      "pyocd_target": "stm32f401retx"
    },
    "stm32f401retx": {
      "pyocd_target": "stm32f401retx"
    }
  },
  
  "aliases": {
    "stm32f407vg": "stm32f407vgtx",
    "stm32h533re": "stm32h533retx",
    "stm32f401re": "stm32f401retx"
  },
  
  "pack_management": {
    "auto_install_enabled": true,
    "pack_install_timeout": 120
  },
  
  "openocd_interfaces": {
    "stlink": {
      "config": "stlink.cfg",
      "description": "ST-Link V2/V3 debug probe"
    },
    "jlink": {
      "config": "jlink.cfg",
      "description": "SEGGER J-Link debug probe"
    },
    "cmsis-dap": {
      "config": "cmsis-dap.cfg",
      "description": "CMSIS-DAP compatible probe"
    },
    "stlink-v3": {
      "config": "stlink.cfg",
      "transport": "hla_swd",
      "description": "ST-Link V3 with SWD"
    }
  },

  "error_messages": {
    "device_not_found": "Device '%s' not found in database. Try 'pyocd list --targets' for available targets.",
    "pack_not_installed": "Device pack '%s' not installed. Install with: pyocd pack --install %s",
    "tool_not_found": "%s not found. Install with: %s"
  }
}
