{
  "comment": "Production-ready Cortex-M configurations based on actual silicon",
  
  "common": {
    "all_cores": {
      "flags": ["-mthumb", "-ffunction-sections", "-fdata-sections"],
      "ldflags": ["-mthumb"]
    },
    "fpu_enabled": {
      "flags": ["-mfloat-abi=hard"],
      "ldflags": ["-mfloat-abi=hard"]
    },
    "fpu_disabled": {
      "flags": ["-mfloat-abi=soft"],
      "ldflags": ["-mfloat-abi=soft"]
    }
  },
  
  "toolchain_specific": {
    "gcc-arm": {
      "cpu_flag_prefix": "-mcpu=",
      "fpu_flag_prefix": "-mfpu="
    },
    "clang-arm": {
      "target_flag_prefix": "--target=",
      "cpu_flag_prefix": "-mcpu=",
      "fpu_flag_prefix": "-mfpu=",
      "lib_prefix": "lib/clang-runtimes/arm-none-eabi/",
      "lib_mapping": {
        "thumbv6m-unknown-none-eabi": {
          "soft": "armv6m_soft_nofp"
        },
        "thumbv8m.base-unknown-none-eabi": {
          "soft": "armv6m_soft_nofp"
        },
        "thumbv7m-unknown-none-eabi": {
          "soft": "armv7m_soft_nofp"
        },
        "thumbv7m-unknown-none-eabihf": {
          "hard": "armv7m_hard_fpv4_sp_d16"
        },
        "thumbv8m.main-unknown-none-eabi": {
          "soft": "armv8m.main_soft_nofp"
        },
        "thumbv8m.main-unknown-none-eabihf": {
          "hard": "armv8m.main_hard_fp"
        },
        "thumbv8.1m.main-unknown-none-eabi": {
          "soft": "armv8.1m.main_soft_nofp_nomve"
        },
        "thumbv8.1m.main-unknown-none-eabihf": {
          "hard": "armv8.1m.main_hard_fp_nomve"
        }
      }
    }
  },
  
  "linker_options": {
    "gcc-arm": {
      "common": ["-Wl,--gc-sections", "-nostartfiles"],
      "newlib_nano": ["--specs=nano.specs", "--specs=nosys.specs"],
      "lto": {
        "thin": ["-flto=thin"],
        "full": ["-flto", "-fuse-linker-plugin"]
      }
    },
    "clang-arm": {
      "common": ["-Wl,--gc-sections", "-nostdlib", "-fuse-ld=lld"],
      "runtime_libs": ["-lc", "-lm", "-lclang_rt.builtins"],
      "lto": {
        "thin": ["-flto=thin"],
        "full": ["-flto"]
      }
    }
  },
  
  "semihosting": {
    "gcc-arm": {
      "enable": ["--specs=rdimon.specs"],
      "disable": ["--specs=nosys.specs"]
    },
    "clang-arm": {
      "enable": ["-lcrt0-semihost"],
      "disable": []
    }
  },
  
  "cores": {
    "cortex-m0": {
      "target": "thumbv6m-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m0plus": {
      "target": "thumbv6m-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m1": {
      "target": "thumbv6m-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m23": {
      "target": "thumbv8m.base-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m3": {
      "target": "thumbv7m-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m4": {
      "target": "thumbv7m-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m4f": {
      "target": "thumbv7m-unknown-none-eabihf",
      "cpu": "cortex-m4",
      "fpu": "fpv4-sp-d16"
    },
    "cortex-m7": {
      "target": "thumbv7m-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m7f": {
      "target": "thumbv7m-unknown-none-eabihf",
      "cpu": "cortex-m7",
      "fpu": "fpv5-d16"
    },
    "cortex-m33": {
      "target": "thumbv8m.main-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m33f": {
      "target": "thumbv8m.main-unknown-none-eabihf",
      "cpu": "cortex-m33",
      "fpu": "fpv5-sp-d16"
    },
    "cortex-m35p": {
      "target": "thumbv8m.main-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m35pf": {
      "target": "thumbv8m.main-unknown-none-eabihf",
      "cpu": "cortex-m35p",
      "fpu": "fpv5-sp-d16"
    },
    "cortex-m52": {
      "target": "thumbv8.1m.main-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m52f": {
      "target": "thumbv8.1m.main-unknown-none-eabihf",
      "cpu": "cortex-m52",
      "fpu": "fpv5-sp-d16"
    },
    "cortex-m55": {
      "target": "thumbv8.1m.main-unknown-none-eabihf",
      "fpu": "fpv5-sp-d16",
      "comment": "MVE is enabled by default with -mcpu=cortex-m55"
    },
    "cortex-m85": {
      "target": "thumbv8.1m.main-unknown-none-eabi",
      "fpu": "none"
    },
    "cortex-m85f": {
      "target": "thumbv8.1m.main-unknown-none-eabihf",
      "cpu": "cortex-m85",
      "fpu": "fpv5-sp-d16",
      "comment": "MVE is enabled by default with -mcpu=cortex-m85"
    }
  }
}